{
  "name": "typescript-express-starter",
  "version": "0.1.0",
  "main": "src/server.js",
  "scripts": {
    "start": "npm run build && npm run watch",
    "build": "npm run build-ts && npm run tslint",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Express\" -c \"cyan.bold,green.bold\" \"npm run watch-ts\" \"npm run serve\"",
    "serve": "cross-env DEBUG=ts-express:* nodemon bin/www",
    "build-ts": "tsc -p src",
    "watch-ts": "tsc -w -p src",
    "tslint": "tslint -c tslint.json -p src/tsconfig.json",
    "test": "cross-env NODE_ENV=test TS_NODE_PROJECT=test mocha --reporter spec --compilers ts:ts-node/register -r tsconfig-paths/register test/unit/**/*.test.ts",
    "migrate": "knex migrate:latest"
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "bookshelf": "^0.10.4",
    "dotenv": "^4.0.0",
    "express": "^4.15.4",
    "knex": "^0.13.0",
    "morgan": "^1.8.2",
    "pg": "^7.12.0"
  },
  "devDependencies": {
    "@types/body-parser": "^1.16.5",
    "@types/bookshelf": "^0.9.6",
    "@types/chai": "^4.0.4",
    "@types/dotenv": "^4.0.1",
    "@types/express": "^4.0.37",
    "@types/knex": "0.0.61",
    "@types/mocha": "^2.2.43",
    "@types/morgan": "^1.7.32",
    "@types/node": "^8.0.28",
    "@types/supertest": "^2.0.3",
    "@types/validatorjs": "^3.7.0",
    "chai": "^4.1.2",
    "concurrently": "^3.5.0",
    "cross-env": "^5.0.5",
    "debug": "^3.0.1",
    "mocha": "^3.5.3",
    "mock-knex": "^0.3.9",
    "nodemon": "^1.12.1",
    "supertest": "^3.0.0",
    "ts-node": "^3.3.0",
    "tsconfig-paths": "^2.3.0",
    "tslint": "^5.7.0",
    "tslint-config-standard": "^6.0.1",
    "typescript": "^2.5.2"
  }
}
